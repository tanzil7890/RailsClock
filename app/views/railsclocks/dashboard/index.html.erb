<div class="dashboard">
  <h1>Dashboard</h1>

  <div class="stats">
    <div class="stat-card">
      <h3>Total Requests</h3>
      <p><%= @request_count %></p>
    </div>
  </div>

  <h2>Recent Requests</h2>
  <table class="requests-table">
    <thead>
      <tr>
        <th>Method</th>
        <th>Path</th>
        <th>Duration</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'railsclocks/requests/request', collection: @recent_requests %>
    </tbody>
  </table>
</div> 